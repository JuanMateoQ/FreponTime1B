<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.frepontime.RegisterController">
    <top>
        <!-- Encabezado con imagen decorativa y espacio para avatar -->
        <AnchorPane prefHeight="77.0" prefWidth="520.0" style="-fx-background-color: #133E87;">
            <children>
                <ImageView fitHeight="60.0" fitWidth="60.0" layoutX="230.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <!-- Ruta de la imagen de avatar, si la tienes -->
                        <Image url="@../resources/avatar.png" />
                    </image>
                </ImageView>
            </children>
        </AnchorPane>
    </top>
    <center>
        <!-- Contenedor para los campos de registro -->
        <AnchorPane prefHeight="300.0" prefWidth="520.0" style="-fx-background-color: #F3F3E0;">
            <children>
                <!-- Campo de Nombre Completo -->
                <Label layoutX="19.0" layoutY="35.0" style="-fx-text-fill: #133E87;" text="Nombre Completo">
                    <font>
                        <Font name="OCR A Extended" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="fullNameTextField" layoutX="172.0" layoutY="29.0" prefHeight="26.0" prefWidth="318.0" promptText="Nombre Completo">
               <font>
                  <Font name="OCR A Extended" size="12.0" />
               </font></TextField>

                <!-- Campo de Correo Institucional -->
                <Label layoutX="15.0" layoutY="82.0" style="-fx-text-fill: #133E87;" text="Correo Institucional">
                    <font>
                        <Font name="OCR A Extended" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="emailTextField" layoutX="172.0" layoutY="76.0" prefHeight="26.0" prefWidth="318.0" promptText="Correo Institucional">
               <font>
                  <Font name="OCR A Extended" size="12.0" />
               </font></TextField>

                <!-- Campo de Código Único -->
                <Label layoutX="15.0" layoutY="126.0" style="-fx-text-fill: #133E87;" text="Código Único">
                    <font>
                        <Font name="OCR A Extended" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="uniqueCodeTextField" layoutX="172.0" layoutY="120.0" prefHeight="26.0" prefWidth="318.0" promptText="Código Único">
               <font>
                  <Font name="OCR A Extended" size="12.0" />
               </font></TextField>

                <!-- Campo de Facultad -->
                <Label layoutX="19.0" layoutY="173.0" style="-fx-text-fill: #133E87;" text="Facultad">
                    <font>
                        <Font name="OCR A Extended" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="facultyTextField" layoutX="172.0" layoutY="167.0" prefHeight="26.0" prefWidth="318.0" promptText="Facultad">
               <font>
                  <Font name="OCR A Extended" size="12.0" />
               </font></TextField>

                <!-- Campo de Teléfono -->
                <Label layoutX="19.0" layoutY="222.0" style="-fx-text-fill: #133E87;" text="Teléfono">
                    <font>
                        <Font name="OCR A Extended" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="phoneTextField" layoutX="172.0" layoutY="216.0" prefHeight="26.0" prefWidth="318.0" promptText="Teléfono">
               <font>
                  <Font name="OCR A Extended" size="12.0" />
               </font></TextField>

                <!-- Botón de Registrarse -->
                <Button fx:id="registerButton" layoutX="30.0" layoutY="272.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="210.0" style="-fx-background-color: #133E87;" text="Registrarse" textFill="WHITE">
                    <font>
                        <Font name="OCR A Extended" size="13.0" />
                    </font>
                </Button>

                <!-- Botón de Regresar -->
                <Button fx:id="backButton" layoutX="279.0" layoutY="272.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="210.0" style="-fx-background-color: #608BC1;" text="Regresar" textFill="WHITE">
                    <font>
                        <Font name="OCR A Extended" size="13.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
